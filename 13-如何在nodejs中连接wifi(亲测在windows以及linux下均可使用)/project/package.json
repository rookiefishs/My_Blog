{
  "name": "kangyang-app",
  "private": true,
  "version": "1.0.1",
  "main": "electron/electron.js",
  "scripts": {
    "dev": "vite dev",
    "build": "vite build",
    "preview": "vite preview",
    "electron": "cross-env IS_DEV=false electron . ",
    "electron:start": " concurrently -k \"vite \" \"cross-env IS_DEV=true electron . \"",
    "electron:build.win": "electron-builder --win --dir",
    "electron:build.linux": "electron-builder --linux appImage",
    "electron:build.test": "electron-builder --dir",
    "electron:build.exe": "electron-builder --win"
  },
  "dependencies": {
    "ant-design-vue": "4.x",
    "js-yaml": "^4.1.0",
    "node-wifi": "^2.0.16",
    "pinia": "^2.1.7",
    "sass": "^1.58.3",
    "unplugin-auto-import": "^0.17.2",
    "vue": "^3.2.16"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^4.0.0",
    "concurrently": "^7.6.0",
    "cross-env": "^7.0.3",
    "electron": "^23.0.0",
    "electron-browser-storage": "^1.0.7",
    "electron-builder": "^23.6.0",
    "electron-packager": "^17.1.1",
    "element-plus": "2.2.29",
    "js-yaml": "^4.1.0",
    "vite": "^4.1.0",
    "vite-plugin-html": "^3.2.0",
    "vue-router": "^4.2.5",
    "vuex": "^4.1.0",
    "wait-on": "^7.0.1",
    "websocket": "^1.0.34"
  },
  "build": {
    "appId": "com.iimt.kangyang-app",
    "productName": "kangyang-app",
    "copyright": "Copyright Â© 2022 Iimt-Cloud",
    "mac": {
      "category": "com.iimt.kangyang-app"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "extraResources": [
      {
        "from": "config_pro.yaml",
        "to": "config_pro.yaml",
        "filter": [
          "**/*"
        ]
      }
    ],
    "files": [
      "dist/**/*",
      "electron/**/*"
    ],
    "directories": {
      "buildResources": "assets",
      "output": "dist_electron"
    },
    "electronDownload": {
      "mirror": "https://npm.taobao.org/mirrors/electron/"
    }
  }
}
